{
  "compilerOptions": {
    // "composite": true, // 启用复合项目, 启用的同时会开启增量编译，并且在编译后会自动生成 tsconfig.tsbuildinfo 文件
    "target": "ES2020",
    "module": "ESNext", // 使用 ESNext 模块系统
    "lib": ["ES2020"], // 使用 ES2020 库
    "moduleResolution": "bundler", // 使用 bundler 模块解析
    "resolveJsonModule": true, // 启用 JSON 模块解析
    "allowJs": false, // 禁用 JS 文件解析
    "strict": true, // 启用严格模式
    "esModuleInterop": true, // 启用 ES 模块互操作
    "skipLibCheck": true, // 跳过库文件检查
    "forceConsistentCasingInFileNames": true, // 强制一致的文件名大小写
    "declaration": true, // 生成声明文件
    "declarationMap": true, // 生成声明文件映射
    "sourceMap": true, // 生成源码映射
    "outDir": "./dist" // 输出目录
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
